<!DOCTYPE html>
<html>
<head>
  <title>Front Page</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Adjust the styles as needed */
    html,
    body {
      height: 100%;
    }
    .container-fluid {
      padding-top: 20px;
      padding-bottom: 20px;
    }
    #news-container {
      height: calc(100% - 220px);
      overflow-y: scroll;
    }
    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .content {
      flex: 1;
    }
  </style>
  <script src="scripts/news-page.js"></script>
</head>
<body>
  <div class="wrapper">
    <!-- Top row -->
    <div class="container-fluid bg-light">
      <div class="row">
        <div class="col">
          <h1>Welcome, User!</h1>
        </div>
        <div class="col">
          <!-- Menu goes here -->
          <ul class="nav justify-content-end">
            <li class="nav-item">
              <a class="nav-link" href="#">Menu Item 1</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Menu Item 2</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Menu Item 3</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

<!-- Second row -->
<div class="container-fluid">
    <div class="row align-items-center">
        <h4>Top Headlines</h4>
        <div class="col">
            <div class="form-group">
                <label for="selCategory">Category</label>
                <select name="category" class="form-control" id="selCategory">
                    {{#each categories}}
                    <option value="{{value}}">{{title}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="selLang">Language</label>
                <select name="language" class="form-control" id="selLang">
                    {{#each languages}}
                    <option value="{{language_code}}">{{language}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="selCountry">Country</label>
                <select name="country" class="form-control" id="selCountry">
                    {{#each countries}}
                    <option value="{{country_code}}">{{country}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary" onclick="submitForm()">Submit</button>
        </div>
    </div>
</div>

<hr>
    <!-- Third row -->
    <div class="container">
      <span class="label label-success">Success Label</span>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3" id="news-container">
        
      </div>
    </div>

    <!-- Fourth row (sticky footer) -->
    <footer class="container-fluid bg-light">
      <div class="row">
        <div class="col">
          <p>This is the last row.</p>
        </div>
      </div>
    </footer>
  </div>

  <!-- Include Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
